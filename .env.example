## Exemplo .env (não comitar chaves reais)
# Copie este arquivo para `.env` e preencha os valores reais.

# Ambiente
ENVIRONMENT=development

# OpenAI
OPENAI_API_KEY=
LLM_PROVIDER=openai
GROQ_API_KEY=
GROQ_BASE_URL=https://api.groq.com/openai/v1
DEFAULT_LLM_MODEL=gpt-4o-mini
DEFAULT_TEMPERATURE=0.3

# Limites / Governança
MAX_CAMPAIGNS_PER_USER=3
REQUIRE_HUMAN_APPROVAL=true

# Logs
LOG_LEVEL=INFO

# Mercado Pago (opcional)
MERCADOPAGO_ACCESS_TOKEN=

# Exemplos de placeholders para integrações de redes sociais
META_ACCESS_TOKEN=
META_APP_SECRET=
META_REDIRECT_URI=http://localhost:8000/auth/meta/callback
GOOGLE_ADS_CUSTOMER_ID=
TWITTER_BEARER_TOKEN=
LINKEDIN_ACCESS_TOKEN=
YOUTUBE_API_KEY=
